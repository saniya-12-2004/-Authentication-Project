
@{
    Layout = null;
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }

        h2 {
            color: #333;
        }

        .welcome {
            margin-top: 20px;
        }

        .logout-btn {
            padding: 8px 16px;
            background-color: red;
            color: white;
            border: none;
            cursor: pointer;
        }

            .logout-btn:hover {
                background-color: darkred;
            }
    </style>
</head>
<body>
    <h2>User Dashboard</h2>

    <div class="welcome">
        <h3>Welcome, @ViewBag.Email</h3> <p>You are logged in as <b>@ViewBag.Role</b>.</p>
    </div>

    <hr />
    <div>  <p><strong>Role:</strong> @ViewBag.Role</p> </div>

    <form action="/Registeration/Logout" method="post">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
</body>
</html>

